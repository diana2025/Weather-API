{
    "compilerOptions": {
        "lib" : ["ESNext"],
        "module" : "ESNext",
        "target": "ESNext",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs" : true,
        "rootDir" : "./src",
        "outDir" : "./build",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "Node"
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}

